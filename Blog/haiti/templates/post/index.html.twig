{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

      <a href="{{ path('post_new') }}"><button class="btn btn-lg btn-primary" type="submit">Crée un article</button></a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenue</th>
                <th>Auteur</th>
                <th>crée</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.author }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">Lire</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Rien trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% endblock %}
